%div{:class => "content"}
	%div{:class => "content_resize"}
		%div{:align => 'center', :class=>'users'}
			%h3 AggieExperts Users
			%table#users
				%thead
					%tr
						%th Name
						%th Email
						%th Status
						%th Actions
				%tbody
					- @users.each do |user|
						%tr
							%td= trim_email(user.email)
							%td= user.email
							%td= status_description(user.status_id)
							%td
								%div{:id=>"action_container", :style=>'overflow: hidden; position: relative;'}
									%div{:id => 'disable_container',:style => 'float: left'}
										%form{:controller => :admin, :action => :disable_user, :method => "post"}
											%input{:type=>"image", :src=>"/assets/Disable.png", :alt=>"Submit", :title=>"Disable User"}
									%div{:id => 'delete_container',:style => 'float: left'}
										%form{:controller => :admin, :action => :delete_user, :method => "post"}
											%input{:type=>"image", :src=>"/assets/Delete.png", :alt=>"Submit",:title=>"Delete User"}
									%div{:id => image_tag("/images/Resend.png"),:style => 'float: left',}
										%form{:controller => :admin, :action => :resend_act_user, :method => "post"}
											%input{:type=>"image", :src=>"/assets/e-mail_icon.gif", :alt=>"Submit",:title=>"Resend Activation Link"}
									%div{:id => 'makeadmin_container',:style => 'float: left'}	
										%form{:controller => :admin, :action => :make_admin_user, :method => "post"}
											%input{:type=>"image", :src=>"/assets/crown.png", :alt=>"Submit",:title=>"Make User Site Admin"}
							
		%br

		%div{:id => 'Approve All'}
			= button_to 'Approve All', :controller => :admin, :action => :approve_all
		%br

		%div{:id => "add_form", :align=>'center'}
			%form{:controller => :admin, :action => :add_user, :method => 'post'}
				%input{:name => "userEmail", :type => "text", :id => "tb_add_user"}
				%input{:type => "submit", :value => "Add User", :id => "bt_add_user"}

