.content
  .content_resize
    #search_form
      %form{:action => "search", :controller => "index", :method => "get"}
        %input#tb_search{:name => "term", :type => "text", :value => @term}
        %input#bt_search{:type => "submit", :value => "Search!"}
    %br/
    - if @istermnull==1
      %h3.center No Results Found
    - else
      %h3.center Results
      .results
         
                 
         
        :javascript
          $(function(){
            $("#res").dataTable( );
          })
                    
        %table#res
          %thead
            %tr
              %th 
          %tbody
            
            - @profiles.each do |profile|
              %tr  
                %td            
                  %a.div_link{:href => user_path(profile.user_id)}
                    .result
                      %img.thumb{:height => "100", :src => asset_path("default.png"), :width => "100"}
                        %strong
                          = profile.name
                        %p.oflow
                          = profile.description
                        %span.keywords
                          %strong Keywords:
                        - @keywords[profile.user_id].each do |keyword|
                          = keyword.key + ';'
