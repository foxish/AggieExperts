.content
  .content_resize
    = form_tag user_path(@user), :method => :put do
      #edit_content
        %table#parent
          %tbody
            %tr
              %td
                .left_column
                  .box#photo
                    %img.profile_pic{:alt => "", :height => "200", :src => asset_path("default.png"), :width => "200"}
                  .box#contact_info
                    %table#contact_info
                      %tbody
                        %tr
                          %td
                            .bold_3
                              Phone:
                          %td
                            %textarea.contact{:name=> 'user[phone]', :id => 'phone'}
                              #{@profile[:phone]}
                        %tr
                          %td
                            .bold_3
                              Email:
                          %td
                            %textarea.contact{:name=> 'user[email]', :id => 'email'}
                              #{@profile[:email]}
              %td
                .right_column
                  .box#name
                    %textarea.bold_1{:name=> 'user[fname]', :id => 'name'}
                      #{@profile[:name]}
                  .box#description
                    .bold_2#heading
                      Bio
                    %textarea.bio{:name=> 'user[description]', :id => 'bio'}
                      #{@profile[:description]}
                  .box#publications
                    .bold_2#heading
                      Publications
                    %table#publications
                      %thead
                        %td
                          .bold_3
                            Title
                        %td
                          .bold_3
                            URL
                        %td
                          .bold_3
                            Delete
                      %tbody
                        - @publications.each do |pub|
                          %tr
                            %td.pub
                              %textarea.publication{:name => "pub[#{pub[:id]}][data][title]", :id => "pub[#{pub[:id]}][data][title]"}
                                #{pub[:title]}
                            %td.pub
                              %textarea.publication{:name => "pub[#{pub[:id]}][data][url]", :id => "pub[#{pub[:id]}][data][url]"}
                                #{pub[:url]}
                            %td.center
                              %input{:type=>'checkbox',:name=>"#{pub[:url]}#{pub[:title]}", :name => "pub[#{pub[:id]}][check]"}

                  .box#keywords
                    .bold_2#heading
                      Keywords
                    %table#keywords
                      %thead
                        %td
                          .bold_3
                            Key
                        %td
                          .bold_3
                            Delete
                      %tbody
                        -@keywords.each do |key|
                          %tr
                            %td
                              %textarea.keywords{:name => "key[#{key['id']}][data][key]", :id => "key[#{key['id']}][data][key]"}
                                #{key['key']}
                            %td.center
                              %input{:type=>'checkbox',:name => "key[#{key['id']}][check]"}

      = submit_tag 'Save Changes'
