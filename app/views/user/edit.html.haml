.content
  .content_resize
    = form_tag user_path(@user), :method => :put, :id => 'edit_form' do
      #edit_content
        %table#parent
          %tbody
            %tr
              %td
                .left_column
                  .box#photo
                    %img.profile_pic{:alt => "", :height => "200", :src => asset_path("default.png"), :width => "200"}
                  .box#contact_info
                    %table#contact_info
                      %tbody
                        %tr
                          %td
                            .bold_3
                              Phone:
                          %td
                            %textarea.contact{:name=> 'user[phone]', :id => 'id_phone', :onblur=>"return validatePhone(this);"}
                              #{@profile[:phone]}
                        %tr
                          %td
                            .bold_3
                              Email:
                          %td
                            %textarea.contact{:name=> 'user[email]', :id => 'id_email', :onblur=>"return validateEmail(this);"}
                              #{@profile[:email]}
                        %tr
                          %td
                            .bold_3
                              Website:
                          %td
                            %textarea.contact{:name=> 'user[website]', :id => 'id_website',:onblur=>"return validateUrl(this);"}
                              #{@profile[:website]}
              %td
                .right_column
                  .box#name
                    %table
                      %tbody
                        %tr
                          %td.title
                            %select.bold_1{:name => 'user[title]'}
                              -['Dr.', 'Prof.', 'Mr.', 'Mrs.', 'Ms.'].each do |title|
                                -if title == @profile[:title]
                                  %option{:value => title, :selected => "selected"} #{title}
                                -else
                                  %option{:value => title} #{title}
                          %td
                            %textarea.bold_1{:name=> 'user[name]', :id => 'id_name', :onblur=>"return validateText(this);"}
                              #{@profile[:name]}
                  .box#keywords
                    .bold_2#heading
                      Keywords
                    .italic_small
                      Try to re-use existing keywords
                    %table#keywords
                      %thead
                        %td
                          .bold_3
                            Key
                        %td
                          .bold_3
                            Delete
                      %tbody
                        -(0..5).each do |index|
                          %tr
                            -if @keywords.length > index
                              %td
                                %textarea.keywords{:name => "keyword[#{index}][key]", :id => "key_word_#{index}", :onblur => "return validateKeywords();"}
                                  #{@keywords[index]['key'].capitalize}
                              %td.center
                                %input{:type=>'checkbox',:name => "key_check_#{index}"}
                            -else
                              %td
                                %textarea.keywords{:name => "keyword[#{index}][key]", :id => "key_word_#{index}", :onblur => "return validateKeywords();"}
                              %td.center
                                %input{:type=>'checkbox',:name => "keyword[#{index}][check]", :id => "key_check_#{index}", :disabled => ''}
                  .box#description
                    .bold_2#heading
                      Bio
                    %textarea.bio{:name=> 'user[description]', :id => 'id_bio', :onblur=>"return validateBio(this);"}
                      #{@profile[:description]}
                  .box#publications
                    .bold_2#heading
                      Publications
                    %table#publications
                      %thead
                        %td
                          .bold_3
                            Title
                        %td
                          .bold_3
                            URL
                        %td
                          .bold_3
                            Delete
                      %tbody
                        -(0..5).each do |index|
                          %tr
                            -if @publications.length > index
                              %td.pub
                                %textarea.publication{:name => "pub[#{@publications[index][:id]}][data][title]", :id => "pub_title_#{index}"}
                                  #{@publications[index][:title]}
                              %td.pub
                                %textarea.publication{:name => "pub[#{@publications[index][:id]}][data][url]", :id => "pub_url_#{index}", :onblur=>"return validateUrl(this);"}
                                  #{@publications[index][:url]}
                              %td.center
                                %input{:type=>'checkbox',:name=> "pub[#{@publications[index][:id]}][check]", :id => "pub_check_#{index}"}
                            -else
                              %td.pub
                                %textarea.publication{:name => "pub[new][#{index}][data][title]", :id => "pub_title_#{index}"}
                              %td.pub
                                %textarea.publication{:name => "pub[new][#{index}][data][url]", :id => "pub_url_#{index}", :onblur=>"return validateUrl(this);"}
                              %td.center
                                %input{:type=>'checkbox',:name=> "pub[new][#{index}][check]", :id => "pub_check_#{index}", :disabled => ""}
      = submit_tag 'Save Changes', :onclick => "return validateForm();"
