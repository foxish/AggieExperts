.content
  .content_resize
    = form_tag user_path(@profile), :method => :put do
      %table#parent
        %tbody
          %tr
            %td
              .box#photo
                %img.profile_pic{:alt => "", :height => "200", :src => asset_path("default.png"), :width => "200"}
              .box#contact_info
                %table#contact_info
                  %tbody
                    %tr
                      %td
                        .bold_3
                          Phone:
                      %td
                        %input#phone{:type=> 'text', :value=> "#{@profile[:phone]}", :name => 'user[phone]'}
                    %tr
                      %td
                        .bold_3
                          Email:
                      %td
                        %input#email{:type=> 'text', :value=> "#{@profile[:email]}", :name => 'user[email]'}
            %td
              .box#name
                %input.bold_1{:type=> 'text', :value=> "#{@profile[:fname]}", :name => 'user[fname]'}
                %input.bold_1{:type=> 'text', :value=> "#{@profile[:lname]}", :name => 'user[lname]'}
              .box#description
                .bold_2#heading
                  Bio
                %textarea.bio{:rows=> '10', :name=> 'user[description]'}
                  #{@profile[:description]}
              .box#publications
                .bold_2#heading
                  Publications
                %table#publications
                  %thead
                    %td
                      .bold_3
                        Title
                    %td
                      .bold_3
                        URL
                    %td
                      .bold_3
                        Delete
                  %tbody
                    - @publications.each do |pub|
                      %tr
                        %td.pub
                          %input.publication{:type=>'text',:value=>"#{pub[:title]}"}
                        %td.pub
                          %input.publication{:type=>'text',:value=>"#{pub[:url]}"}
                        %td.center
                          %input{:type=>'checkbox',:name=>"#{pub[:url]}#{pub[:title]}", :checked => ""}

              .box#keywords
                .bold_2#heading
                  Keywords
                %table#keywords
                  %tbody
                    -@keywords.each do |key|
                      %tr
                        %td
                          %input{:type=>'checkbox',:name=>"#{key}", :checked => ""}
                        %td
                          %input#key{:type=>'text', :value=>"#{key}"}

      = submit_tag 'Save Changes'
